<%= render "layouts/errors", :object => @product %>

<div class="card">
  <%= form_for @product do |f| %>
    <%= f.label :title%>
    <%= f.text_field :title %>
    <%= f.label :cost%>
    <%= f.number_field :cost %>
    <%= f.label :country%>
    <%= f.text_field :country %>
    <%= f.submit 'Submit', :class => "btn-dark" %>
  <% end %>
</div>
